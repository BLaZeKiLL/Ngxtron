{
  "productName": "ngxtron",
  "directories": {
    "output": "release/"
  },
  "files": [
    "**/*",
    "!**/*.ts",
    "!*.code-workspace",
    "!LICENSE.md",
    "!.vscode",
    "!README.md",
    "!package.json",
    "!package-lock.json",
    "!apps/",
    "!libs/",
    "!tools",
    "!hooks/",
    "!angular.json",
    "!tsconfig.json",
    "!tslint.json",
    "!nx.json",
    "!jest.config.js",
    "!.editorconfig",
    "!.prettierignore",
    "!.prettierrc"
  ],
  "win": {
    "target": ["portable"]
  },
  "mac": {
    "target": ["dmg"]
  },
  "linux": {
    "target": ["AppImage"]
  }
}
